<com.zhixin.customui.CardItemView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_card_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card_small_origin" >

        <include layout="@layout/customui_xinlimap_card_title" />

        <LinearLayout
            android:id="@+id/layout_inner_card_item_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <WebView
                android:id="@+id/layout_card_item_webview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp" />

            <ImageView
                android:id="@+id/layout_card_item_lock_img"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/ic_launcher" />

            <RelativeLayout
                android:id="@+id/layout_card_item_epq_picture"
                android:layout_width="wrap_content"
                android:layout_height="120dp" >

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="#00000000"
                    android:scaleType="fitCenter"
                    android:src="@drawable/coordinate_system_background" />

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="#00000000"
                    android:scaleType="fitCenter"
                    android:src="@drawable/coordinate_system_text" />
            </RelativeLayout>

            <TextView
                android:id="@+id/layout_card_item_lock_tips"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="locktips"
                android:textSize="18sp" />

            <LinearLayout
                android:id="@+id/layout_card_item_ns"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/layout_card_item_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:singleLine="true"
                    android:text="name"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/layout_card_item_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:singleLine="true"
                    android:text="score"
                    android:textSize="18sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/layout_card_item_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="ffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffff"
                android:textSize="18sp" />
        </LinearLayout>
        <LinearLayout 
            android:id="@+id/layout_card_item_share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            
            <Button 
                android:id="@+id/btn_card_item_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:background="@drawable/btn_share"/>
        </LinearLayout>
</com.zhixin.customui.CardItemView>