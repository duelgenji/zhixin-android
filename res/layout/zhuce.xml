<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/general_activity_background"
    android:orientation="vertical"
    android:weightSum="96.1" >

    <include layout="@layout/header" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_weight="89.1"
        android:orientation="vertical"
        android:weightSum="89.1" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="32"
            android:gravity="center" >

            <FrameLayout
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:gravity="center" >

                <com.qubaopen.customui.CircleImageView
                    android:id="@+id/head_img"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/head_img"
                    app:border_color="@color/text_white"
                    app:border_width="0dp" />

                <ImageView
                    android:id="@+id/take_pic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|right"
                    android:src="@drawable/take_pic" />
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="15dp"
            android:layout_weight="39"
            android:orientation="vertical"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:weightSum="39" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="12"
                android:background="@drawable/input_background_top_white_default"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="25"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="@string/login_account"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/txtPhone"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="71.6"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="@string/login_phone_edittext_hints"
                    android:inputType="phone"
                    android:maxLength="16"
                    android:text="13524053695"
                    android:textSize="16sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3.4" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="12"
                android:background="@drawable/input_background_bottom_white_default"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="25"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="@string/login_password"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/password_first_line"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="65"
                    android:background="@null"
                    android:digits="qwertyuiopasdfghjklzxcvbnm1234567890"
                    android:gravity="center_vertical"
                    android:hint="@string/login_password_input_hints"
                    android:inputType="textPassword"
                    android:maxLength="30"
                    android:text="wahaha123"
                    android:textSize="16sp" />

                <ToggleButton
                    android:id="@+id/btn_show_password"
                    android:layout_width="0dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="10"
                    android:background="@drawable/checkbox_eye"
                    android:button="@android:color/transparent"
                    android:checked="false"
                    android:textOff=""
                    android:textOn="" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:layout_weight="12"
                android:orientation="horizontal"
                android:padding="1dp" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:background="@drawable/input_background_single_white_default"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3.9" />

                    <EditText
                        android:id="@+id/validate_code"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="75.3"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:hint="@string/regist_validate_hint"
                        android:inputType="number"
                        android:maxLength="16"
                        android:textSize="16sp" />

                    <ImageButton
                        android:id="@+id/clearTextviewBtn"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_weight="13"
                        android:background="@null"
                        android:scaleType="fitCenter"
                        android:src="@drawable/modify_nickname_button" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3.4" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3.6"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="70" >

                        <ImageButton
                            android:id="@+id/ib_get_reg_code"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/send_yzm"
                            android:button="@android:color/transparent" />

                        <TextView
                            android:id="@+id/reg_code_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@null"
                            android:gravity="center"
                            android:text="@string/send_token"
                            android:textColor="@color/text_white"
                            android:textSize="18sp" />
                    </FrameLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal" >

            <ToggleButton
                android:id="@+id/regist_i_agree"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/checkbox_square"
                android:button="@android:color/transparent"
                android:checked="true"
                android:textOff=""
                android:textOn="" />

            <TextView
                android:id="@+id/txtAgreeTips"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@null"
                android:lineSpacingMultiplier="1.5"
                android:text="已经阅读并同意《知心使用条款和隐私政策》"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/already_regist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:gravity="center"
                android:text="@string/already_regiset_user"
                android:textColor="@color/text_red"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:text="|"
                android:textColor="@color/text_black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/forget_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:gravity="center"
                android:text="@string/login_password_forgot"
                android:textColor="@color/text_red"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>