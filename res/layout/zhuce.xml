<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="96.1" >

    <include layout="@layout/header" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginTop="15dp"
        android:layout_weight="89.1"
        android:orientation="vertical"
        android:weightSum="89.1" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="32"
            android:gravity="center" >

            <FrameLayout
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:gravity="center" >

               <com.zhixin.customui.CircleImageView
                    android:id="@+id/head_img"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/head_img"
                    app:border_color="@color/text_white"
                    app:border_width="0dp" />

                <ImageView
                    android:id="@+id/take_pic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|right"
                    android:src="@drawable/take_pic" />
            </FrameLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:layout_weight="48.1"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="25.6" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="8.6"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/input_background_top_white_default"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_weight="20"
                            android:background="@null"
                            android:gravity="center"
                            android:text="@string/login_account"
                            android:textSize="18sp" />

                        <EditText
                            android:id="@+id/txtPhone"
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_weight="81.3"
                            android:background="@null"
                            android:gravity="center_vertical"
                            android:hint="@string/login_phone_edittext_hints"
                            android:inputType="phone"
                            android:maxLength="16"
                            android:text="13524053695"
                            android:textSize="16sp" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3.4" />
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_weight="8.6"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/input_background_bottom_white_default"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_weight="20"
                            android:background="@null"
                            android:gravity="center"
                            android:text="@string/login_password"
                            android:textSize="18sp" />

                        <EditText
                            android:id="@+id/password_first_line"
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_weight="81.3"
                            android:background="@null"
                            android:gravity="center_vertical"
                            android:hint="@string/login_password_input_hints"
                            android:inputType="textPassword"
                            android:maxLength="30"
                            android:text="wahaha123"
                            android:textSize="16sp" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3.4" />
                    </LinearLayout>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_weight="8.6"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal"
                    android:padding="1dp" >

                    <LinearLayout
                        android:layout_width="151dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/input_background_single_white_default"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3.9" />

                        <EditText
                            android:id="@+id/validate_code"
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_weight="81.3"
                            android:background="@null"
                            android:gravity="center_vertical"
                            android:hint="@string/regist_validate_hint"
                            android:inputType="number"
                            android:maxLength="16"
                            android:textSize="18sp" />

                        <ImageButton
                            android:id="@+id/clearTextviewBtn"
                            android:layout_width="1dp"
                            android:layout_height="35dp"
                            android:layout_weight="7"
                            android:background="@null"
                            android:scaleType="fitCenter"
                            android:src="@drawable/modify_nickname_button" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3.4" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_height="35dp"
                            android:layout_marginLeft="20dp"
                            android:layout_weight="70" >

                            <ImageButton
                                android:id="@+id/ib_get_reg_code"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/send_yzm"
                                android:button="@android:color/transparent" />

                            <TextView
                                android:id="@+id/reg_code_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:background="@null"
                                android:gravity="center"
                                android:text="@string/send_token"
                                android:textColor="@color/text_white"
                                android:textSize="18sp" />
                        </FrameLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_weight="9"
            android:orientation="horizontal" >

            <ToggleButton
                android:id="@+id/regist_i_agree"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:background="@drawable/checkboxs"
                android:button="@android:color/transparent"
                android:checked="true"
                android:textOff=""
                android:textOn="" />

            <FrameLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="80.6" >

                <TextView
                    android:id="@+id/txtAgreeTips"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:lineSpacingMultiplier="1.5"
                    android:paddingTop="15dp"
                    android:text="已经阅读并同意                                "
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/txtAgreePrivacyTips"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:lineSpacingMultiplier="1.5"
                    android:paddingTop="15dp"
                    android:text="                          《知心使用条款和隐私政策》"
                    android:textSize="16sp" />
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="110dp"
            android:layout_weight="0.5"
            android:gravity="center"
            android:orientation="horizontal" >
        </LinearLayout>
    </LinearLayout>

</LinearLayout>