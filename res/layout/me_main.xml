<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0E0E0"
    android:orientation="vertical"
    android:weightSum="89.1" >

    <include layout="@layout/header_me" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="81.1"
        android:orientation="vertical"
        android:weightSum="80.1" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_gravity="bottom"
            android:layout_weight="20"
            android:background="@drawable/my_background"
            android:orientation="vertical" >

            <View
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="6" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="14"
                android:orientation="horizontal" >

                <com.zhixin.customui.CircleImageView
                    android:id="@+id/headIcon"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/head_img"
                    app:border_color="@color/text_white"
                    app:border_width="0dp" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="60dp"
                    android:layout_marginLeft="5dp"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="20dp"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/nickNameTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="4dp"
                            android:text="阿亮哥"
                            android:textColor="@color/text_white"
                            android:textSize="18sp" />

                        <ImageButton
                            android:id="@+id/editNickNameBtn"
                            android:layout_width="20dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_toRightOf="@+id/nickNameTextView"
                            android:background="@null"
                            android:gravity="start"
                            android:scaleType="fitCenter"
                            android:src="@drawable/edit_nickname" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="20dp"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="1dp"
                            android:text="个人签名："
                            android:textColor="@color/text_white"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/signature"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_weight="1"
                            android:background="@null"
                            android:gravity="start"
                            android:hint="请输入个性签名！"
                            android:singleLine="true"
                            android:text="天气好热，精神恍惚"
                            android:textColor="@color/text_white"
                            android:textSize="13sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="20dp"
                        android:orientation="horizontal" >

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:src="@drawable/health_index" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="健康指数："
                            android:textColor="@color/text_white"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/coinNumberText"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="1099"
                            android:textColor="@color/text_white"
                            android:textSize="13sp" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:background="@null"
                            android:src="@drawable/coin" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="金币："
                            android:textColor="@color/text_white"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/coinNumberText2"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="1099"
                            android:textColor="@color/text_white"
                            android:textSize="13sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            android:layout_weight="60.1"
            android:orientation="vertical"
            android:padding="5dp"
            android:weightSum="60.1" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="8.6"
                android:paddingLeft="7.56dp"
                android:paddingRight="7.56dp" >

                <LinearLayout
                    android:id="@+id/layoutMyprofile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/input_background_top_white_default"
                    android:orientation="horizontal" >

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3.9" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="88.3"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:text="个人资料"
                        android:textSize="18dp" />

                    <ImageView
                        android:layout_width="8dp"
                        android:layout_height="15dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/right_arrow" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3.4" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="8.6"
                android:paddingLeft="7.56dp"
                android:paddingRight="7.56dp" >

                <LinearLayout
                    android:id="@+id/layoutShareAppComp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/input_background_middle_white_default"
                    android:orientation="horizontal" >

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3.9" />

                    <TextView
                        android:id="@+id/password_second_line"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="88.3"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:text="推荐给好友"
                        android:textSize="18dp" />

                    <ImageView
                        android:layout_width="8dp"
                        android:layout_height="15dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/right_arrow" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3.4" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="8.6"
                android:paddingLeft="7.56dp"
                android:paddingRight="7.56dp" >

                <LinearLayout
                    android:id="@+id/layoutSuggestion"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/input_background_middle_white_default"
                    android:orientation="horizontal" >

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3.9" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="88.3"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:text="意见反馈"
                        android:textSize="18dp" />

                    <ImageView
                        android:layout_width="8dp"
                        android:layout_height="15dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/right_arrow" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3.4" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="8.6"
                android:paddingLeft="7.56dp"
                android:paddingRight="7.56dp" >

                <LinearLayout
                    android:id="@+id/scoreTheApp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/input_background_middle_white_default"
                    android:orientation="horizontal" >

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3.9" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="88.3"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:text="给知心一个好评吧"
                        android:textSize="18dp" />

                    <ImageView
                        android:layout_width="8dp"
                        android:layout_height="15dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/right_arrow" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3.4" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="8.6"
                android:paddingLeft="7.56dp"
                android:paddingRight="7.56dp" >

                <LinearLayout
                    android:id="@+id/layoutAbout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/input_background_bottom_white_default"
                    android:orientation="horizontal" >

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3.9" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="88.3"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:maxLength="30"
                        android:text="关于"
                        android:textSize="18dp" />

                    <ImageView
                        android:layout_width="8dp"
                        android:layout_height="15dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/right_arrow" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3.4" />
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="8.5"
                android:orientation="vertical" >
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>