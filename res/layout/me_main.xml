<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:weightSum="96.1"
    android:background="#E0E0E0">

    <include
        android:layout_width="match_parent"
        android:layout_height="30dp"
        layout="@layout/header_me" />

	<LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="100dp"
	    android:layout_gravity="bottom"
	    android:layout_weight="9.64"
	    android:orientation="vertical"
	    android:background="@drawable/my_background" >

	    <View 
	        android:layout_width="fill_parent"
	        android:layout_height="60dp"
	        
	        />
	    <LinearLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="60dp"
	        android:orientation="horizontal"
	        android:layout_marginBottom="5dp"
	        >

	        <ImageView
	            android:layout_width="60dp"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="5dp"
	            android:layout_marginBottom="5dp"
	            android:src="@drawable/head_img" />

	        <LinearLayout 
	            android:layout_width="fill_parent"
	            android:layout_height="60dp"
	            android:layout_marginLeft="5dp"
	            android:orientation="vertical"
	            >
	            <LinearLayout 
	                android:layout_width="fill_parent"
	                android:layout_height="20dp"
	                android:orientation="horizontal"
	                >
	            <TextView
	                android:id="@+id/nickNameTextView"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="阿亮哥"
	                android:textSize="18sp"
	                android:textColor="@color/text_white"
	                android:layout_marginRight="4dp"
	                />
	            <ImageButton
	                android:id="@+id/editNickNameBtn"
	                android:layout_width="20dp"
	                android:layout_height="wrap_content"
	                android:layout_gravity="start"
	                android:layout_toRightOf="@+id/nickNameTextView"
	                android:background="@null"
	                android:gravity="start"
	                android:scaleType="fitCenter"
	                android:src="@drawable/edit_nickname" />
	            </LinearLayout>
	            
	            <LinearLayout
	                android:layout_width="fill_parent"
	                android:layout_height="20dp"
	                android:orientation="horizontal"
	                 >

	                <TextView
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:text="个人签名："
	                    android:textSize="13sp"
	                    android:textColor="@color/text_white"
	                    android:padding="1dp" />

	                <EditText
	                    android:id="@+id/signature"
	                    android:layout_width="wrap_content"
	                    android:layout_height="25dp"
	                    android:layout_gravity="start"
	                    android:textColor="@color/text_white"
	                    android:gravity="start"
	                    android:text="天气好热，精神恍惚"
	                    android:textSize="13sp" />
	            </LinearLayout>

	       <LinearLayout 
	            android:layout_width="fill_parent"
	            android:layout_height="20dp"
	            android:orientation="horizontal"
	            >

            <ImageView
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:background="@null"
                android:src="@drawable/health_index" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="健康指数："
                android:textColor="@color/text_white"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/coinNumberText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="1099"
                android:textColor="@color/text_white"
                android:textSize="13sp" />
	            	
	       
	            	
	        <ImageView
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:background="@null"
                android:src="@drawable/coin" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="金币："
                android:textColor="@color/text_white"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/coinNumberText2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="1099"
                android:textColor="@color/text_white"
                android:textSize="13sp" />
            </LinearLayout>
	     </LinearLayout>
	        
	    </LinearLayout>
	</LinearLayout>

	<LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="102dp"
	    android:layout_marginBottom="40dp"
	    android:layout_marginTop="5dp"
	    android:layout_weight="60.35"
	    android:orientation="vertical"
	    android:padding="5dp" >

	<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="8.6"
        android:paddingLeft="7.56dp"
        android:paddingRight="7.56dp" >

        <LinearLayout
            android:id="@+id/layoutMyprofile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/input_background_top_white_default"
            android:orientation="horizontal" >

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="3.9" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="88.3"
                android:background="@null"
                android:gravity="center_vertical"
                android:text="个人资料"
                android:textSize="18dp" />
			<ImageView
                    android:layout_width="8dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/right_arrow" />
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="3.4" />
        </LinearLayout>

    </RelativeLayout>

   <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="8.6"
        android:paddingLeft="7.56dp"
        android:paddingRight="7.56dp" >

        <LinearLayout
            android:id="@+id/layoutDuijiang"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/input_background_top_white_default"
            android:orientation="horizontal" >

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="3.9" />

            <TextView
                android:id="@+id/password_first_line"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="88.3"
                android:background="@null"
                android:gravity="center_vertical"
                android:text="兑奖"
                android:textSize="18dp" />
			
            <ImageView
                    android:layout_width="8dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/right_arrow" />


            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="3.4" />
        </LinearLayout>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="8.6"
        android:paddingLeft="7.56dp"
        android:paddingRight="7.56dp" >

        <LinearLayout
            android:id="@+id/layoutShareAppComp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/input_background_bottom_white_default"
            android:orientation="horizontal" >

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="3.9" />

            <TextView
                android:id="@+id/password_second_line"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="88.3"
                android:background="@null"
                android:gravity="center_vertical"
                android:text="推荐给好友"
                android:textSize="18dp" />

				<ImageView
                    android:layout_width="8dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/right_arrow" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="3.4" />
        </LinearLayout>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="8.6"
        android:paddingLeft="7.56dp"
        android:paddingRight="7.56dp" >

        <LinearLayout
            android:id="@+id/layoutSuggestion"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/input_background_bottom_white_default"
            android:orientation="horizontal" >

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="3.9" />

            <TextView
                android:id="@+id/password_second_line"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="88.3"
                android:background="@null"
                android:gravity="center_vertical"
                android:text="意见反馈"
                android:textSize="18dp" />

				<ImageView
                    android:layout_width="8dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/right_arrow" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="3.4" />
        </LinearLayout>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="8.6"
        android:paddingLeft="7.56dp"
        android:paddingRight="7.56dp" >

        <LinearLayout
            android:id="@+id/scoreTheApp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/input_background_bottom_white_default"
            android:orientation="horizontal" >

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="3.9" />

            <TextView
                android:id="@+id/password_second_line"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="88.3"
                android:background="@null"
                android:text="给知心一个好评吧"
                android:gravity="center_vertical"
                android:textSize="18dp" />

			<ImageView
                    android:layout_width="8dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/right_arrow" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="3.4" />
        </LinearLayout>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="8.6"
        android:paddingLeft="7.56dp"
        android:paddingRight="7.56dp" >

        <LinearLayout
            android:id="@+id/layoutAbout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/input_background_bottom_white_default"
            android:orientation="horizontal" >

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="3.9" />

            <TextView
                android:id="@+id/password_second_line"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="88.3"
                android:background="@null"
                android:gravity="center_vertical"
                android:text="关于"
                android:maxLength="30"
                android:textSize="18dp" />

			<ImageView
                    android:layout_width="8dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/right_arrow" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="3.4" />
        </LinearLayout>

    </RelativeLayout>
    </LinearLayout>
</LinearLayout>
