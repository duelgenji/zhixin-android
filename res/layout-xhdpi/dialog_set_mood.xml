<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_gravity="center"
    android:background="@drawable/input_background_single_white_default_9"
    android:orientation="vertical"
   	android:layout_marginLeft="40dp"
   	android:layout_marginRight="40dp" >

    <TextView
        android:id="@+id/dialog_set_mood_title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/set_mood"
        android:textColor="@color/text_black"
        android:textSize="16sp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/text_black" />
    
	 <TextView
        android:id="@+id/dialog_set_mood_text"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/set_mood_text"
        android:textColor="@color/text_grey"
        android:textSize="13sp" />

	 <EditText
	     android:id="@+id/dialog_set_mood_message"
	     android:layout_width="match_parent"
	     android:layout_height="0dp"
	     android:layout_marginLeft="5dp"
	     android:layout_marginRight="5dp"
	     android:layout_marginTop="10dp"
	     android:layout_marginBottom="10dp"
	     android:layout_weight="1"
	     android:gravity="center_vertical"
	     android:hint="@string/set_mood_hint"
	     android:textColor="@color/text_black"
	     android:textSize="13sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/text_black" />

    <LinearLayout
        android:id="@+id/layoutAction"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/dialog_set_mood_confirm"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/confirm"
            android:textColor="@color/text_blue"
            android:textSize="20sp" />

        <View
            android:layout_width="0.1dp"
            android:layout_height="match_parent"
            android:background="@color/text_black" />

        <TextView
            android:id="@+id/dialog_set_mood_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="@color/text_blue"
            android:textSize="20sp" />
    </LinearLayout>

</LinearLayout>