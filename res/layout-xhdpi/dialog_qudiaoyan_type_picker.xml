<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="116.28dp"
    android:weightSum="96.1" >

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="12" />

    <RelativeLayout
        android:id="@+id/pickDialog"
        android:layout_width="129dp"
        android:layout_height="wrap_content"
        android:background="@drawable/spinner_picker_background"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:paddingTop="15dp" >

        <Button
            android:id="@+id/qudiaoyanTypeAll"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_alignParentTop="true"
            android:background="@null"
            android:gravity="center"
            android:text="@string/quceshi_type_all"
            android:textColor="@color/text_white"
            android:textSize="@dimen/text_size_normal" />

        <Button
            android:id="@+id/qudiaoyanTypeDianzishangwu"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_below="@id/qudiaoyanTypeAll"
            android:layout_marginTop="10dp"
            android:background="@null"
            android:gravity="center"
            android:text="@string/qudiaoyan_type_dianzishangwu"
            android:textColor="@color/text_white"
            android:textSize="@dimen/text_size_normal" />

        <Button
            android:id="@+id/qudiaoyanTypeShichangdiaocha"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_below="@id/qudiaoyanTypeDianzishangwu"
            android:layout_marginTop="10dp"
            android:background="@null"
            android:gravity="center"
            android:text="@string/qudiaoyan_type_shichangdiaocha"
            android:textColor="@color/text_white"
            android:textSize="@dimen/text_size_normal" />

        <Button
            android:id="@+id/qudiaoyanTypeKehudiaocha"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_below="@id/qudiaoyanTypeShichangdiaocha"
            android:layout_marginTop="10dp"
            android:background="@null"
            android:gravity="center"
            android:text="@string/qudiaoyan_type_kehudiaocha"
            android:textColor="@color/text_white"
            android:textSize="@dimen/text_size_normal" />

        <Button
            android:id="@+id/qudiaoyanTypeRenliziyuan"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_below="@id/qudiaoyanTypeKehudiaocha"
            android:layout_marginTop="10dp"
            android:background="@null"
            android:gravity="center"
            android:text="@string/qudiaoyan_type_renliziyuan"
            android:textColor="@color/text_white"
            android:textSize="@dimen/text_size_normal" />

        <Button
            android:id="@+id/qudiaoyanTypeXiaoyuandiaocha"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_below="@id/qudiaoyanTypeRenliziyuan"
            android:layout_marginTop="10dp"
            android:background="@null"
            android:gravity="center"
            android:text="@string/qudiaoyan_type_xiaoyuandiaocha"
            android:textColor="@color/text_white"
            android:textSize="@dimen/text_size_normal" />

        <Button
            android:id="@+id/qudiaoyanTypeQita"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_below="@id/qudiaoyanTypeXiaoyuandiaocha"
            android:layout_marginTop="10dp"
            android:background="@null"
            android:gravity="center"
            android:text="@string/quceshi_type_qita"
            android:textColor="@color/text_white"
            android:textSize="@dimen/text_size_normal" />
    </RelativeLayout>

</LinearLayout>