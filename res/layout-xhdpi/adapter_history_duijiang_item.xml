<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@color/general_activity_background"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/img_gift"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_weight="30"
        android:gravity="center"
        android:src="@drawable/img_gift"
         />
	<LinearLayout 
		android:layout_width="1dp"
		android:layout_height="fill_parent"
		android:orientation="vertical"
		android:layout_weight="70"
		>
		<LinearLayout 
		    android:layout_width="fill_parent"
		    android:layout_height="30dp"
		    android:orientation="horizontal"
		    android:layout_marginTop="5dp"
		    >
		    <TextView
		        android:id="@+id/title"
		        android:layout_width="1dp"
		        android:layout_height="match_parent"
		        android:layout_weight="1"
		        android:gravity="center"
		        android:text="移动充值200元"
		        android:textColor="@color/text_black"
		        android:textSize="15sp" />
		     <TextView
		        android:id="@+id/duijiangNo"
		        android:layout_width="1dp"
		        android:layout_height="match_parent"
		        android:layout_weight="1"
		        android:gravity="center"
		        android:text="QB15001"
		        android:textColor="@color/text_blue"
		        android:textSize="13sp" />
		</LinearLayout>	    
		<LinearLayout 
		    android:layout_width="fill_parent"
		    android:layout_height="15dp"
		    android:orientation="horizontal"
		    >
		 <TextView
	        android:id="@+id/duijiangDate"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:text="20130501"
	        android:textColor="@color/text_grey"
	        android:textSize="13sp" />
		</LinearLayout>
		<LinearLayout 
		    android:layout_width="fill_parent"
		    android:layout_height="35dp"
		    android:orientation="horizontal"
		    >

		 <TextView
		     android:id="@+id/duijiangDate"
		     android:layout_width="wrap_content"
		     android:layout_height="30dp"
		     android:text="需要积分："
		     android:textColor="@color/text_orange"
		     android:textSize="13sp" />

		 <TextView
	        android:id="@+id/duijiangJifen"
	        android:layout_width="1dp"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:text="500"
	        android:textColor="@color/text_orange"
	        android:textSize="13sp" />
		 <RelativeLayout
        	android:id="@+id/querenComp"
        	android:layout_width="1dp"
        	android:layout_height="match_parent"
        	android:layout_weight="1" >
    		</RelativeLayout>
		</LinearLayout>
		    
		</LinearLayout>
    

</LinearLayout>