<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/general_activity_background"
    android:orientation="vertical"
    android:weightSum="85.9" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="35.1" >

        <ViewFlipper
            android:id="@+id/qugonggaoFlipper"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <ImageView
                android:id="@+id/imgGongGao_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:tag="0" />

            <ImageView
                android:id="@+id/imgGongGao_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:tag="1" />

            <ImageView
                android:id="@+id/imgGongGao_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:tag="2" />

            <ImageView
                android:id="@+id/imgGongGao_4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:tag="3" />

            <ImageView
                android:id="@+id/imgGongGao_5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:tag="4" />
        </ViewFlipper>

        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:layout_gravity="right|bottom" >

            <LinearLayout
                android:id="@+id/qugonggaoIndicator"
                android:layout_width="90dp"
                android:layout_height="6.3dp"
                android:layout_centerInParent="true"
                android:background="@null"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/round_pot_default" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/round_pot_default" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/round_pot_default" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/round_pot_default" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/round_pot_default" />
            </LinearLayout>
        </RelativeLayout>
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="5.6" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="18"
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        android:paddingRight="5dp" >

        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp" >

            <ImageButton
                android:id="@+id/btnQCS"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="10.1"
                android:background="@null"
                android:scaleType="fitCenter"
                android:src="@drawable/quceshi_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:layout_weight="2.1"
                android:text="@string/qushouye_quceshi"
                android:textColor="#8d8d8d"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp" >

            <ImageButton
                android:id="@+id/btnQDY"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="10.1"
                android:background="@null"
                android:scaleType="fitCenter"
                android:src="@drawable/qudiaoyan_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:layout_weight="2.1"
                android:text="@string/qushouye_qudiaoyan"
                android:textColor="#8d8d8d"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp" >

            <ImageButton
                android:id="@+id/btnQHT"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="10.1"
                android:background="@null"
                android:scaleType="fitCenter"
                android:src="@drawable/quhuati_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:layout_weight="2.1"
                android:text="@string/qushouye_quhuati"
                android:textColor="#8d8d8d"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="5.6" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="19"
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        android:paddingRight="5dp" >

        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp" >

            <ImageButton
                android:id="@+id/btnLSCS"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="10.1"
                android:background="@null"
                android:scaleType="fitCenter"
                android:src="@drawable/history_quceshi_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:layout_weight="2.1"
                android:text="@string/qushouye_lishiceshi"
                android:textColor="#8d8d8d"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp" >

            <ImageButton
                android:id="@+id/btnLSDY"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="10.1"
                android:background="@null"
                android:scaleType="fitCenter"
                android:src="@drawable/history_qudiaoyan_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:layout_weight="2.1"
                android:text="@string/qushouye_lishidiaoyan"
                android:textColor="#8d8d8d"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp" >

            <ImageButton
                android:id="@+id/btnGRZL"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="10.1"
                android:background="@null"
                android:scaleType="fitCenter"
                android:src="@drawable/personal_profile_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:layout_weight="2.1"
                android:text="@string/qushouye_gerenziliao"
                android:textColor="#8d8d8d"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rollingMessageArea"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="2.8"
        android:background="@color/transparent_black_background" >

        <TextView
            android:id="@+id/rollingMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:lines="1"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:textColor="@color/text_white" />
    </RelativeLayout>

</LinearLayout>