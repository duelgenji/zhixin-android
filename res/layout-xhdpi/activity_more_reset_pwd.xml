<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/general_activity_background"
    android:orientation="vertical"
    android:weightSum="96.1" >

    <include layout="@layout/header" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="6.1"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:text="@string/more_reset_input_old_pwd"
        android:textSize="18sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="8.6"
        android:paddingLeft="7.56dp"
        android:paddingRight="7.56dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/input_background_top_white_default"
            android:orientation="horizontal" >

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="3.9" />

            <EditText
                android:id="@+id/txtOldPwdReset"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="88.3"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="@string/more_reset_input_old_hint"
                android:inputType="textPassword"
                android:maxLength="30"
                android:textSize="18sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="3.4" />
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="6.1"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:text="@string/more_reset_input_new_pwd"
        android:textSize="18sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="8.6"
        android:paddingLeft="7.56dp"
        android:paddingRight="7.56dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/input_background_top_white_default"
            android:orientation="horizontal" >

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="3.9" />

            <EditText
                android:id="@+id/txtNewPwdReset1"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="88.3"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="@string/more_reset_input_new_hint"
                android:inputType="textPassword"
                android:maxLength="30"
                android:textSize="18sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="3.4" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="8.6"
        android:paddingLeft="7.56dp"
        android:paddingRight="7.56dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/input_background_bottom_white_default"
            android:orientation="horizontal" >

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="3.9" />

            <EditText
                android:id="@+id/txtNewPwdReset2"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="88.3"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="@string/more_reset_confirm_new_hint"
                android:inputType="textPassword"
                android:maxLength="30"
                android:textSize="18sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="3.4" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="6.8" />

</LinearLayout>