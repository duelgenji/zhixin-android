<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/text_white"
    android:baselineAligned="false"
    android:orientation="vertical"
    android:paddingLeft="6dp"
    android:weightSum="100" >

	<LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:paddingBottom="3dp"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/txtNameUserAddressItem"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="bottom"
                android:singleLine="true"
                android:text="huyy"
                android:textColor="@color/text_grey"
                android:textSize="@dimen/text_size_custom" />

            <TextView
                android:id="@+id/txtPhoneUserAddressItem"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:ellipsize="end"
                android:gravity="bottom|right"
                android:singleLine="true"
                android:text="15000000000"
                android:textColor="@color/text_grey"
                android:textSize="@dimen/text_size_custom" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="1.23"
                android:ellipsize="end"
                android:gravity="bottom|right"
                android:singleLine="true"
                android:text="设为默认"
                android:textColor="@color/text_grey"
                android:textSize="@dimen/text_size_custom" />

            <ImageView 
                android:id="@+id/imgIsDefault"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/address_add_yes_default"
                />
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:paddingTop="3dp"
           >

            <TextView
                android:id="@+id/txtAddressUserAddressItem"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="上海市普陀区1680弄建德花园"
                android:textColor="@color/text_grey"
                android:textSize="@dimen/text_size_custom" />

            </LinearLayout>

            <View android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/address_add_fengexian"/>
            <LinearLayout 
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                
                >
                <ImageView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/delete"
                    />
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="删除"
                   android:layout_gravity="center"
                    />
                <ImageView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/bianji"
                    android:layout_gravity="right"
                    />
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="编辑"
                   android:layout_gravity="center|right"
                    />
            </LinearLayout>
        </LinearLayout>

    



</LinearLayout>