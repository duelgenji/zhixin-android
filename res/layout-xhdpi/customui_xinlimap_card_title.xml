<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_card_item_title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >
    <ImageView 
        android:id="@+id/layout_card_item_title_color_block"
        android:layout_width="24dp"
        android:layout_height="90dp"/>
    <TextView 
        android:id="@+id/layout_card_item_title_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:gravity="left"
        android:textSize="18sp"
        android:layout_weight="1"
        android:text="title" />
    <ImageView 
        android:id="@+id/layout_card_item_title_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@drawable/card_arrow_origin" />
</LinearLayout>