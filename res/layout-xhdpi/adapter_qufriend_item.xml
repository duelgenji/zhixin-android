<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="66.56dp"
    android:background="@color/general_activity_background"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:weightSum="100" >

    <FrameLayout
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_weight="18.1"
        android:paddingBottom="4.8dp"
        android:paddingTop="4.8dp" >

        <ImageView
            android:id="@+id/headIconPHQF"
            android:layout_width="58dp"
            android:layout_height="match_parent"
            android:layout_gravity="right|center_vertical"
            android:scaleType="fitCenter"
            android:src="@drawable/head_icon_default" />

        <ImageView
            android:id="@+id/headIconQF"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="2dp"
            android:scaleType="fitCenter"
             />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/quFriendClickableItem"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_weight="54.1"
        android:orientation="vertical" >

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="2.6" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.7"
            android:paddingLeft="6dp" >

            <TextView
                android:id="@+id/nickNameQF"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="带难打"
                android:textSize="13sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="2.3"
            android:paddingLeft="3dp" >

            <TextView
                android:id="@+id/levelMyLevelTips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/level_my_level_tips"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/levelValueQF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_toRightOf="@id/levelMyLevelTips"
                android:text="580"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/coinIconImage"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/levelValueQF"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/coin_icon" />

            <TextView
                android:id="@+id/coinTips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_toRightOf="@id/coinIconImage"
                android:text="@string/qushejiao_fame_text"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/coinValueQF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_toRightOf="@id/coinTips"
                android:text="580"
                android:textSize="12sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="1.7" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_weight="27.8"
        android:paddingBottom="17.28dp"
        android:paddingTop="17.28dp" >

        <ImageButton
            android:id="@+id/buyButton"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="0dp"
            android:background="@null"
            android:cropToPadding="true"
            android:scaleType="fitCenter"
            android:src="@drawable/buy" />

        <ImageButton
            android:id="@+id/messageButton"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_toRightOf="@id/buyButton"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/send_message" />
    </RelativeLayout>

</LinearLayout>