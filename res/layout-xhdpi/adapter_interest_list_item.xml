<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/general_activity_background"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="8dp"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/img_quceshi_list"
        android:layout_width="fill_parent"
        android:layout_height="168dp"
        android:background="@drawable/quceshi_list_background"
        android:src="@drawable/interest_list_default_image"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="vertical" >

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <TextView
            android:id="@+id/questionareTitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="测试：你的情绪控制指数有多高？"
            android:textColor="@color/text_black"
            android:textSize="17sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal"
            android:paddingTop="5dp" >

            <TextView
                android:id="@+id/answerNumberTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="12345"
                android:textColor="@color/text_black"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="人测试"
                android:textColor="@color/text_black"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="好友："
                android:textColor="@color/text_black"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/answerFriendNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12"
                android:textColor="@color/text_black"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="人"
                android:textColor="@color/text_black"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:orientation="horizontal" >

                <FrameLayout
                    android:id="@+id/tagFragment1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:visibility="gone" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/qu_remeng_icon"
                        android:tag="tagImage" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:tag="tagText"
                        android:text="@string/quceshi_biaoqian_remeng"
                        android:textColor="@color/text_white"
                        android:textSize="11sp" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/tagFragment2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:visibility="gone" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/qu_remeng_icon"
                        android:tag="tagImage" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:tag="tagText"
                        android:text="@string/quceshi_biaoqian_remeng"
                        android:textColor="@color/text_white"
                        android:textSize="11sp" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/tagFragment3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:visibility="gone" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/qu_remeng_icon"
                        android:tag="tagImage" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:tag="tagText"
                        android:text="@string/quceshi_biaoqian_remeng"
                        android:textColor="@color/text_white"
                        android:textSize="11sp" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/tagFragment4"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:visibility="gone" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/qu_remeng_icon"
                        android:tag="tagImage" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:tag="tagText"
                        android:text="@string/quceshi_biaoqian_remeng"
                        android:textColor="@color/text_white"
                        android:textSize="11sp" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/tagFragment5"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:visibility="gone" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/qu_remeng_icon"
                        android:tag="tagImage" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:tag="tagText"
                        android:text="@string/quceshi_biaoqian_remeng"
                        android:textColor="@color/text_white"
                        android:textSize="11sp" />
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>