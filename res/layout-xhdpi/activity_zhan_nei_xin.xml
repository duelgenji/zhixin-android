<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"  
    tools:context=".ZhanNeiXinActivity"
    android:background="@color/general_activity_background"
    android:weightSum="96.1"
    android:orientation="vertical" >

    <include layout="@layout/header" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10.2"
        android:orientation="vertical"
        android:paddingLeft="20.16dp"
        android:paddingRight="20.16dp"
        android:background="@drawable/rank_radio_button_background" >

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="2.3" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="5.6"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/znxXT"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/zhanneixin_left_button"
                android:button="@android:color/transparent"
                android:checked="true"
                android:gravity="center"
                android:onClick="onZNXClick"
                android:text="@string/zhanneixin_button_xitong"
                android:textColor="#ffffff"
                android:textSize="18sp" />

            <RadioButton
                android:id="@+id/znxZJ"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/zhanneixin_middle_button"
                android:button="@android:color/transparent"
                android:gravity="center"
                android:onClick="onZNXClick"
                android:text="@string/zhanneixin_button_zhongjiang"
                android:textColor="#8d8d8d"
                android:textSize="18sp" />

            <RadioButton
                android:id="@+id/znxSX"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/zhanneixin_middle_button"
                android:button="@android:color/transparent"
                android:gravity="center"
                android:onClick="onZNXClick"
                android:text="@string/zhanneixin_button_sixin"
                android:textColor="#8d8d8d"
                android:textSize="18sp" />
            
            <RadioButton
                android:id="@+id/znxQQ"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/zhanneixin_right_button"
                android:button="@android:color/transparent"
                android:gravity="center"
                android:onClick="onZNXClick"
                android:text="@string/zhanneixin_button_qingqiu"
                android:textColor="#8d8d8d"
                android:textSize="18sp" />
        </RadioGroup>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="2.3" />
    </LinearLayout>
    
    
    
    <ListView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="78.9"/>
    
    
   
</LinearLayout>
