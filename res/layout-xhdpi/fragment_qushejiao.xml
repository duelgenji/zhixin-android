<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/general_activity_background"
    android:splitMotionEvents="false"
    android:orientation="vertical" >

    <include layout="@layout/header_without_backward" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="26.7"
        android:background="@drawable/head_icon_background"
        android:orientation="vertical" >

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_weight="5.3" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="13.4" >

            <ImageView
                android:id="@+id/headIconPHQSJ"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:src="@drawable/head_icon_default" />

            <ImageView
                android:id="@+id/headIconQSJ"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginTop="3dp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="1.5" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4" >

            <TextView
                android:id="@+id/nickNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text=""
                android:textColor="@color/text_white"
                android:textSize="@dimen/text_size_custom" />

            <ImageButton
                android:id="@+id/editNickNameBtn"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_toRightOf="@+id/nickNameTextView"
                android:background="@null"
                android:gravity="start"
                android:scaleType="fitCenter"
                android:src="@drawable/edit_nickname" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="4.5" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="7.8"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/layoutCoinQSJ"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/coin_background">

            <ImageView
                android:layout_width="1dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:paddingLeft="8dp"
                android:background="@null"
                android:src="@drawable/coin" />

            <TextView
                android:layout_width="1dp"
                android:layout_weight="1.5"
                android:layout_height="match_parent"
                android:gravity="center_vertical|right"
                android:text="@string/qushejiao_coin_text"
                android:textColor="@color/text_white"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/coinNumberText"
                android:layout_width="1dp"
                android:layout_weight="2.5"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text=""
                android:textColor="@color/text_white"
                android:textSize="13sp" />
        </LinearLayout>

        

        
    </LinearLayout>

   

</LinearLayout>