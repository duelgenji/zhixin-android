<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/general_activity_background" >

    <include layout="@layout/header" >
    </include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="10.2"
        android:background="@drawable/rank_radio_button_background"
        android:orientation="vertical"
        android:paddingLeft="20.16dp"
        android:paddingRight="20.16dp" >

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="2.3" />

        <RadioGroup
            android:id="@+id/huatiBtnGroup"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="5.6"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/myPaticipateHuati"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/quhuati_left_button"
                android:button="@android:color/transparent"
                android:checked="true"
                android:gravity="center"
                android:text="@string/quhuati_myFinish"
                android:textColor="#ffffff"
                android:textSize="18sp" />

            <RadioButton
                android:id="@+id/myPublishHuati"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/quhuati_right_button"
                android:button="@android:color/transparent"
                android:gravity="center"
                android:text="@string/quhuati_myPublish"
                android:textColor="#8d8d8d"
                android:textSize="18sp" />
        </RadioGroup>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="2.3" />
    </LinearLayout>

    <ListView
        android:id="@+id/quhuatiList"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="78.9" />

</LinearLayout>