<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:layout_gravity="center"
    android:background="@drawable/input_background_single_white_default"
    android:orientation="vertical"
   	android:layout_marginLeft="40dp"
   	android:layout_marginRight="40dp" >

    <TextView
        android:id="@+id/dialog_recover_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/submmit_recover_wj_tips"
        android:textColor="@color/text_black"
        android:textSize="20sp" />
    <TextView
        android:id="@+id/dialog_recover_tips"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
         android:layout_weight="1"
        android:gravity="center"
        android:text="@string/submmit_recover_wj_tips_hint"
        android:textColor="@color/text_grey"
        android:textSize="15sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/text_black" />

    <LinearLayout
        android:id="@+id/layoutAction"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/dialog_btn_recover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/recover"
            android:textColor="@color/text_blue"
            android:textSize="20sp" />

         <TextView
            android:id="@+id/dialog_btn_not_recover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/not_recover"
            android:textColor="@color/text_blue"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/dialog_recover_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="@color/text_blue"
            android:textSize="20sp" />
    </LinearLayout>

</LinearLayout>