<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    android:paddingLeft="20dp"
    android:paddingTop="10dp" >

    <RadioButton
        android:id="@+id/choiceCheckBox"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/checkbox"
        android:button="@android:color/transparent" />

    <TextView
        android:id="@+id/choiceNoTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/choiceCheckBox"
        android:textColor="@color/text_grey"
        android:text="A"
        android:textSize="@dimen/text_size_custom" />

    <TextView
        android:id="@+id/choiceTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="3dp"
        android:layout_toRightOf="@id/choiceNoTextView"
        android:text="阿迪达斯发发阿发的发的啥"
        android:textColor="@color/text_grey"
        android:textSize="@dimen/text_size_custom" />

</RelativeLayout>