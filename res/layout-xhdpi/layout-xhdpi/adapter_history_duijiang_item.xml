<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@color/general_activity_background"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/duijiangNo"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="QB15001"
        android:textColor="@color/text_blue"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/title"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="移动充值200元"
        android:textColor="@color/text_black"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/duijiangDate"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="20130501"
        android:textColor="@color/text_black"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/duijiangJifen"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="500"
        android:textColor="@color/text_orange"
        android:textSize="13sp" />

    <RelativeLayout
        android:id="@+id/querenComp"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_weight="1" >
    </RelativeLayout>

</LinearLayout>