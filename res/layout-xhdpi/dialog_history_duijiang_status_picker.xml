<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootViewOfStatusPicker"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/pickDialog"
        android:layout_width="100dp"
        android:layout_height="305dp"
        android:background="@drawable/spinner_picker_background"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:paddingTop="5dp" >

        <Button
            android:id="@+id/allStatusBtn"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_alignParentTop="true"
            android:background="@null"
            android:gravity="center"
            android:text="@string/duijiang_history_all_status"
            android:textColor="@color/text_white"
            android:textSize="@dimen/text_size_normal" />

        <Button
            android:id="@+id/choujiangzhongBtn"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_below="@id/allStatusBtn"
            android:layout_marginTop="10dp"
            android:background="@null"
            android:gravity="center"
            android:text="@string/duijiang_history_choujiangzhong"
            android:textColor="@color/text_white"
            android:textSize="@dimen/text_size_normal" />

        <Button
            android:id="@+id/weizhongjiangBtn"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_below="@id/choujiangzhongBtn"
            android:layout_marginTop="10dp"
            android:background="@null"
            android:gravity="center"
            android:text="@string/duijiang_history_weizhongjiang"
            android:textColor="@color/text_white"
            android:textSize="@dimen/text_size_normal" />

        <Button
            android:id="@+id/dailingjiangBtn"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_below="@id/weizhongjiangBtn"
            android:layout_marginTop="10dp"
            android:background="@null"
            android:gravity="center"
            android:text="@string/duijiang_history_dailingjiang"
            android:textColor="@color/text_white"
            android:textSize="@dimen/text_size_normal" />

        <Button
            android:id="@+id/fahuozhongBtn"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_below="@id/dailingjiangBtn"
            android:layout_marginTop="10dp"
            android:background="@null"
            android:gravity="center"
            android:text="@string/duijiang_history_fahuozhong"
            android:textColor="@color/text_white"
            android:textSize="@dimen/text_size_normal" />

        <Button
            android:id="@+id/chakanjiangpingBtn"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_below="@id/fahuozhongBtn"
            android:layout_marginTop="10dp"
            android:background="@null"
            android:gravity="center"
            android:text="@string/duijiang_history_chakanjiangping"
            android:textColor="@color/text_white"
            android:textSize="@dimen/text_size_normal" />

        <Button
            android:id="@+id/daiquerenBtn"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_below="@id/chakanjiangpingBtn"
            android:layout_marginTop="10dp"
            android:background="@null"
            android:gravity="center"
            android:text="@string/duijiang_history_daiqueren"
            android:textColor="@color/text_white"
            android:textSize="@dimen/text_size_normal" />

        <Button
            android:id="@+id/yiquerenBtn"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_below="@id/daiquerenBtn"
            android:layout_marginTop="10dp"
            android:background="@null"
            android:gravity="center"
            android:text="@string/duijiang_history_yiqueren"
            android:textColor="@color/text_white"
            android:textSize="@dimen/text_size_normal" />

        <Button
            android:id="@+id/chulizhongBtn"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_below="@id/yiquerenBtn"
            android:layout_marginTop="10dp"
            android:background="@null"
            android:gravity="center"
            android:text="@string/duijiang_history_chulizhong"
            android:textColor="@color/text_white"
            android:textSize="@dimen/text_size_normal" />
    </RelativeLayout>

</LinearLayout>