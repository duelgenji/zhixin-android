<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/general_activity_background"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:splitMotionEvents="false"
    android:weightSum="96.1" >

    <include layout="@layout/header" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:splitMotionEvents="false"
        android:scrollbars="vertical"
        android:layout_weight="89.1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_black"
                    android:textSize="15sp"
                    android:text="@string/cash_account_encash_tips"/>
                </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="7.56dp"
                android:paddingRight="7.56dp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/input_background_single_white_default"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3.9" />

                    <LinearLayout
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_weight="96.1"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:text="@string/cash_account_balance"
                            android:gravity="center_vertical"
                            android:textColor="@color/text_black"
                            android:textSize="18sp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:adjustViewBounds="true"
                            android:background="@null"
                            android:scaleType="fitCenter"
                            android:src="@drawable/coin_icon"/>
                        <TextView
                            android:id="@+id/txtBalanceEncash"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:background="@null"
                            android:text=""
                            android:gravity="center_vertical"
                            android:textColor="@color/text_orange"
                            android:textSize="20sp" />
                        <TextView
                            android:id="@+id/txtApproximateEncash"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:background="@null"
                            android:text=""
                            android:gravity="center_vertical"
                            android:textColor="@color/text_grey"
                            android:textSize="16sp" />

                    </LinearLayout>


                </LinearLayout>

            </RelativeLayout>




            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="7.56dp"
                android:paddingRight="7.56dp" >

                <LinearLayout
                    android:id="@+id/layoutCoinEncash"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/input_background_top_white"
                    android:orientation="horizontal" >

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3.9" />

                    <TextView
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_weight="50"
                        android:background="@null"
                        android:text="@string/cash_account_amount"
                        android:gravity="center_vertical"
                        android:textColor="@color/text_black"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/txtCoinEncash"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_weight="38"
                        android:singleLine="true"
                        android:background="@null"
                        android:ellipsize="end"
                        android:inputType="number"
                        android:maxLength="8"
                        android:selectAllOnFocus="true"
                        android:gravity="right|center"
                        android:hint="@string/cash_account_please_input_hint"
                        android:textColorHint="@color/text_light_grey"
                        android:textColor="@color/text_black"
                        android:textSize="18sp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3.7"/>
                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="7.56dp"
                android:paddingRight="7.56dp" >

                <LinearLayout
                    android:id="@+id/layoutAlipayAccountEncash"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/input_background_middle_white_default"
                    android:orientation="horizontal" >

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3.9" />

                    <TextView
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_weight="40"
                        android:background="@null"
                        android:text="@string/cash_account_alipay_account"
                        android:gravity="center_vertical"
                        android:textColor="@color/text_black"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/txtAlipayAccountEncash"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_weight="48"
                        android:singleLine="true"
                        android:background="@null"
                        android:ellipsize="end"
                        android:gravity="right|center"
                        android:hint="@string/cash_account_please_input_alipay_hint"
                        android:textColorHint="@color/text_light_grey"
                        android:textColor="@color/text_black"
                        android:textSize="18sp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3.7"/>
                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="7.56dp"
                android:paddingRight="7.56dp" >

                <LinearLayout
                    android:id="@+id/layoutAlipayAccountEncash"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/input_background_middle_white_default"
                    android:orientation="horizontal" >

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3.9" />

                    <TextView
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_weight="50"
                        android:background="@null"
                        android:text="@string/cash_account_name"
                        android:gravity="center_vertical"
                        android:textColor="@color/text_black"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/txtNameEncash"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_weight="38"
                        android:singleLine="true"
                        android:background="@null"
                        android:ellipsize="end"
                        android:gravity="right|center"
                        android:hint="@string/cash_account_please_input_hint"
                        android:textColorHint="@color/text_light_grey"
                        android:textColor="@color/text_black"
                        android:textSize="18sp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3.7"/>
                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="7.56dp"
                android:paddingRight="7.56dp" >

                <LinearLayout
                    android:id="@+id/layoutAlipayAccountEncash"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/input_background_bottom_white_default"
                    android:orientation="horizontal" >

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3.9" />

                    <TextView
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_weight="40"
                        android:background="@null"
                        android:text="@string/cash_account_id"
                        android:gravity="center_vertical"
                        android:textColor="@color/text_black"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/txtIdEncash"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_weight="48"
                        android:singleLine="true"
                        android:background="@null"
                        android:maxLength="18"
                        android:ellipsize="end"
                        android:gravity="right|center"
                        android:hint="@string/cash_account_please_input_hint"
                        android:textColorHint="@color/text_light_grey"
                        android:textColor="@color/text_black"
                        android:textSize="18sp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3.7"/>
                </LinearLayout>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/text_size_custom"
                    android:text="@string/cash_account_token_phone"/>
                <TextView
                    android:id="@+id/txtTokenPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_blue"
                    android:textSize="@dimen/text_size_custom"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="7.56dp"
                android:paddingRight="7.56dp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/input_background_single_white_default"
                    android:orientation="horizontal" >

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3.9" />


                    <EditText
                        android:id="@+id/txtTokenEncash"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_weight="50"
                        android:singleLine="true"
                        android:background="@null"
                        android:inputType="number"
                        android:selectAllOnFocus="true"
                        android:gravity="left|center"
                        android:hint="@string/cash_account_please_input_token_hint"
                        android:textColorHint="@color/text_light_grey"
                        android:textColor="@color/text_black"
                        android:textSize="18sp" />

                    <Button
                        android:id="@+id/btnGetToken"
                        android:layout_width="1dp"
                        android:layout_weight="28"
                        android:layout_height="30dp"
                        android:background="@drawable/button_short_blue"
                        android:text="@string/cash_account_get_token"
                        android:textColor="@color/text_white"
                        android:textSize="15sp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3.7"/>
                </LinearLayout>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/text_size_custom"
                    android:text="@string/cash_account_token_tips"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="20dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp">

                <Button
                    android:id="@+id/btnConfirm"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/button_long_blue"
                    android:text="@string/header_submit_text"
                    android:textColor="@color/text_white"
                    android:textSize="20sp" />
            </RelativeLayout>


        </LinearLayout>




    </ScrollView>


</LinearLayout>