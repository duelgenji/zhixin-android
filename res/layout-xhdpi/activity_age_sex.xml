<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/instruction_self_age_sex"
    android:orientation="vertical"
    android:weightSum="100"
    tools:context=".InitialActivity" >

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="35" />

    <EditText
        android:id="@+id/txtAge"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="15"
        android:background="@drawable/age_input"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:maxLength="3"
        android:singleLine="true"
        android:inputType="number" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="35"
        android:orientation="horizontal"
        android:weightSum="4" >

        <ImageButton
            android:id="@+id/btnBoy"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@null"
            android:src="@drawable/sex_boy" />

        <ImageButton
            android:id="@+id/btnGirl"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@null"
            android:src="@drawable/sex_girl" />
    </LinearLayout>


    <ImageButton
        android:id="@+id/btnSubmit"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="15"
        android:background="@null"
        android:src="@drawable/button_age_sex" />

</LinearLayout>