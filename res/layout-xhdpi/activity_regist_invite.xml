<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/general_activity_background"
    android:orientation="vertical"
    android:weightSum="96.1"
    tools:context=".ModifyNicknameActivity" >

    <include layout="@layout/header_with_skip" />



    <TextView

        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="6.1"
        android:paddingLeft="10dp"
        android:gravity="center_vertical"
        android:text="@string/regist_input_your_invite_code"
        android:textSize="18sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="8.6"
        android:paddingLeft="7.56dp"
        android:paddingRight="7.56dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/input_background_white"
            android:orientation="horizontal" >

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="3.9" />

            <EditText
                android:id="@+id/inviteCodeEditText"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="81.3"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="@string/regist_invite_hint"
                android:maxLength="16"
                android:textSize="18sp" />

            <ImageButton
                android:id="@+id/clearTextviewBtn"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:background="@null"
                android:scaleType="fitCenter"
                android:src="@drawable/modify_nickname_button" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="3.4" />
        </LinearLayout>
    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="5.8"/>


    <RelativeLayout
        android:layout_below="@id/viewBlankQHTC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="30dp"
        android:paddingRight="30dp">

        <Button
            android:id="@+id/registInviteBtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/button_long_blue"
            android:text="@string/regist_validate_next"
            android:onClick="submitInviteAction"
            android:textColor="@color/text_white"
            android:textSize="20sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="9.3"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="8.3"
        android:paddingLeft="7.56dp"
        android:paddingRight="7.56dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="3.4"/>

            <TextView
                android:id="@+id/nicknameTextView"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="80.6"
                android:background="@null"
                android:textColor="@color/text_grey"
                android:text="@string/regist_invite_code_tips"
                android:textSize="16sp" />
        </LinearLayout>
    </RelativeLayout>


</LinearLayout>