<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/general_activity_background"
    android:orientation="vertical"
    android:weightSum="96.1"
    tools:context=".ModifyNicknameActivity" >

    <include layout="@layout/header_user_info_address" />

    <View

        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="2.1"
        android:paddingLeft="10dp"
        android:gravity="center_vertical"
        android:textSize="18sp" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="8.6"
        android:paddingLeft="7.56dp"
        android:paddingRight="7.56dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/input_background_top_white"
            android:orientation="horizontal" 
            android:gravity="center_vertical" >

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="3.9" />
			<TextView 
			    android:layout_width="1dp"
			    android:layout_height="match_parent"
			    android:layout_weight="30"
			    android:text="真实姓名"
			    android:textSize="18sp" 
			    android:gravity="center"
			    />
            <EditText
                android:id="@+id/txtInputNamePersonalProfile"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="80.3"
                android:background="@null"
                android:gravity="center_vertical|right"
                android:maxLength="30"
                android:hint="@string/more_user_info_name_hint"
                android:textSize="18sp" />



            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="3.4" />
        </LinearLayout>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="8.6"
        android:paddingLeft="7.56dp"
        android:paddingRight="7.56dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/input_background_bottom_white"
            android:orientation="horizontal"
            android:gravity="center_vertical" >

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="3.9" />
			<TextView 
			    android:layout_width="1dp"
			    android:layout_height="match_parent"
			    android:layout_weight="30"
			    android:text="身份证号码"
			    android:textSize="18sp" 
			    android:gravity="center"
			    />
            <EditText
                android:id="@+id/txtInputIdentityPersonalProfile"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="63.3"
                android:background="@null"
                android:gravity="center_vertical|right"
                android:maxLength="30"
                android:hint="@string/more_user_info_identity_hint"
                android:textSize="18sp" />



            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="3.4" />
        </LinearLayout>

    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="4.3"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="8.3"
        android:paddingLeft="7.56dp"
        android:paddingRight="7.56dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="1.4"/>

            <TextView
                android:id="@+id/nicknameTextView"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:background="@null"
                android:textColor="@color/text_grey"
                android:text="@string/user_info_attention"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/nicknameTextView"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="72.6"
                android:background="@null"
                android:textColor="@color/text_grey"
                android:text="@string/user_info_authentication"
                android:textSize="16sp" />
        </LinearLayout>
    </RelativeLayout>




</LinearLayout>