<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="345dp"
    android:layout_height="400dp"
    android:layout_gravity="bottom|center"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:paddingRight="15dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="28.7"
        android:background="@drawable/dialog_head_pick_background"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp" >

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.1" />

        <Button
            android:id="@+id/btnABloodTypePicker"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6.8"
            android:background="@drawable/dialog_pick_image_button"
            android:text="@string/dialog_pick_blood_type_A"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.4" />


        <Button
            android:id="@+id/btnBBloodTypePicker"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6.8"
            android:background="@drawable/dialog_pick_image_button"
            android:text="@string/dialog_pick_blood_type_B"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.2" />

        <Button
            android:id="@+id/btnOBloodTypePicker"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6.8"
            android:background="@drawable/dialog_pick_image_button"
            android:text="@string/dialog_pick_blood_type_O"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.4" />
        <Button
            android:id="@+id/btnABBloodTypePicker"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6.8"
            android:background="@drawable/dialog_pick_image_button"
            android:text="@string/dialog_pick_blood_type_AB"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.4" />
        <Button
            android:id="@+id/btnOtherBloodTypePicker"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6.8"
            android:background="@drawable/dialog_pick_image_button"
            android:text="@string/dialog_pick_blood_type_Other"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.4" />


        <Button
            android:id="@+id/btnCancelBloodTypePicker"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6.8"
            android:background="@drawable/dialog_pick_image_cancel"
            android:text="@string/cancel"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.6" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.8"
        android:background="@null" />

</LinearLayout>