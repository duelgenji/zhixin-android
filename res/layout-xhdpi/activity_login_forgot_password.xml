<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/general_activity_background"
    android:orientation="vertical"
    android:weightSum="96.1"
    android:splitMotionEvents="false"
    tools:context=".ModifyNicknameActivity" >

    <include layout="@layout/header" />



    

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="8.6"
        android:layout_marginTop="20dp"
        android:paddingLeft="7.56dp"
        android:paddingRight="7.56dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/input_background_top_white"
            android:orientation="horizontal" >

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="3.9" />
			<TextView 
			    android:layout_width="1dp"
			    android:layout_height="match_parent"
			    android:textSize="18sp"
			    android:layout_weight="30"
			    android:gravity="center_vertical"
			    android:text="您的账号"
			    />
            <EditText
                android:id="@+id/txtInputPhone"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="81.3"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="@string/login_phone_edittext_hints"
                android:maxLength="16"
                android:textSize="18sp"
                android:inputType="phone" />

            <ImageButton
                android:id="@+id/btnClearText1"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:background="@null"
                android:scaleType="fitCenter"
                android:src="@drawable/modify_nickname_button" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="3.4" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="8.6"
        android:paddingLeft="7.56dp"
        android:paddingRight="7.56dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/input_background_middle_white_default"
            android:orientation="horizontal" >

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="3.9" />
			<TextView 
			    android:layout_width="1dp"
			    android:layout_height="match_parent"
			    android:textSize="18sp"
			    android:layout_weight="30"
			    android:gravity="center_vertical"
			    android:text="新密码"
			    />
            <EditText
                android:id="@+id/txtInputPwd1"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="88.3"
                android:background="@null"
                android:inputType="textPassword"
                android:gravity="center_vertical"
                android:hint="@string/login_password_edittext_hints"
                android:maxLength="30"
                android:textSize="18sp" />



            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="3.4" />
        </LinearLayout>

    </RelativeLayout>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="8.6"
        android:paddingLeft="7.56dp"
        android:paddingRight="7.56dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/input_background_bottom_white_default"
            android:orientation="horizontal" >

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="3.9" />
			<TextView 
			    android:layout_width="1dp"
			    android:layout_height="match_parent"
			    android:textSize="18sp"
			    android:layout_weight="30"
			    android:gravity="center_vertical"
			    android:text="确认密码"
			    />
            <EditText
                android:id="@+id/txtInputPwd2"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="88.3"
                android:background="@null"
                android:inputType="textPassword"
                android:gravity="center_vertical"
                android:hint="@string/regist_password_again"
                android:maxLength="30"
                android:textSize="18sp" />



            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="3.4" />
        </LinearLayout>

    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="3.8"/>

	<!-- <Button
            android:id="@+id/btnNext"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_gravity="right"
            android:background="@drawable/button_long_blue"
            android:text="@string/regist_validate_next"
            android:textColor="@color/text_white"
            android:textSize="20sp" /> -->
    <TextView

        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="6.1"
        android:paddingLeft="10dp"
        android:gravity="center_vertical"
        android:text="@string/regist_input_your_validate_code"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="8.6"
        android:paddingLeft="7.56dp"
        android:paddingRight="7.56dp" 
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="151dp"
            android:layout_height="match_parent"
            android:background="@drawable/input_background_white"
            android:orientation="horizontal" >

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="3.9" />

            <EditText
                android:id="@+id/txtInputToken"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="81.3"
                android:background="@null"
                android:inputType="number"
                android:gravity="center_vertical"
                android:hint="@string/regist_validate_hint"
                android:maxLength="16"
                android:textSize="18sp" />

            <ImageButton
                android:id="@+id/btnClearText"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:background="@null"
                android:scaleType="fitCenter"
                android:src="@drawable/modify_nickname_button" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="3.4" />
        </LinearLayout>
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
			<FrameLayout
                        android:layout_width="5dp"
                        android:layout_height="35dp"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="70" >
                        <ImageButton
                            android:id="@+id/im_retrieve_code"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:button="@android:color/transparent"
                            android:background="@drawable/send_yzm" />

                        <TextView
                            android:id="@+id/tv_retrieve_code"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/send_token"
                            android:background="@null"
                            android:textSize="18sp"
                            android:gravity="center"
                            android:textColor="@color/text_white"
                            android:layout_gravity="center"
                            />
                    </FrameLayout>
                 </LinearLayout>
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="5.8"/>


    <!-- <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="30dp"
        android:paddingRight="30dp">

        <Button
            android:id="@+id/btnConfirm"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/button_long_blue"
            android:text="@string/confirm"
            android:textColor="@color/text_white"
            android:textSize="20sp" />
    </RelativeLayout> -->


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:gravity="center"
        android:layout_weight="5.3">

        <TextView
            android:id="@+id/txtRemainTime"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="18sp"
            android:textColor="@color/text_grey"
            />
        <TextView
            android:id="@+id/txtResend"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:textColor="@color/text_orange"
            android:textSize="18sp"
            android:layout_toRightOf="@id/txtRemainTime"
           />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_weight="5.8" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="8.3"
        android:paddingLeft="7.56dp"
        android:paddingRight="7.56dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="3.4"/>

            
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="3.4"/>
        </LinearLayout>
    </RelativeLayout>




</LinearLayout>