<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
     android:layout_height="67.84dp"
    android:background="@color/general_activity_background"
    android:orientation="vertical" >
    
    <TextView
	    android:id="@+id/tv_questionareTitle"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="10dp"
	    android:textColor="@color/text_black"
	    android:text="调研：初入江湖？"
	    android:layout_marginTop="5dp"
	    android:textSize="17sp" />
	<TextView
	    android:id="@+id/questionare_main_Title"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="10dp"
	    android:textColor="@color/text_grey"
	    android:text="情商高比智商高重要"
	    android:layout_marginTop="5dp"
	    android:textSize="13sp" />
	<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal"
        android:paddingBottom="2dp"
        android:paddingTop="5dp" >

			<LinearLayout
			    android:layout_width="40dp"
			    android:layout_height="match_parent"
			    android:orientation="horizontal" >

                <FrameLayout
                    android:id="@+id/tagFragment1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:visibility="gone" >

                    <ImageView
                        android:id="@+id/tagImage"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/qu_remeng_icon" />

                    <TextView
                        android:id="@+id/tagText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/quceshi_biaoqian_remeng"
                        android:textColor="@color/text_white"
                        android:textSize="11sp" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/tagFragment2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:visibility="gone" >

                    <ImageView
                        android:id="@+id/tagImage2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/qu_remeng_icon" />

                    <TextView
                        android:id="@+id/tagText2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/quceshi_biaoqian_remeng"
                        android:textColor="@color/text_white"
                        android:textSize="11sp" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/tagFragment3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:visibility="gone" >

                    <ImageView
                        android:id="@+id/tagImage3"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/qu_remeng_icon" />

                    <TextView
                        android:id="@+id/tagText3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/quceshi_biaoqian_remeng"
                        android:textColor="@color/text_white"
                        android:textSize="11sp" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/tagFragment4"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:visibility="gone" >

                    <ImageView
                        android:id="@+id/tagImage4"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/qu_remeng_icon" />

                    <TextView
                        android:id="@+id/tagText4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/quceshi_biaoqian_remeng"
                        android:textColor="@color/text_white"
                        android:textSize="11sp" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/tagFragment5"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:visibility="gone" >

                    <ImageView
                        android:id="@+id/tagImage5"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/qu_remeng_icon" />

                    <TextView
                        android:id="@+id/tagText5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/quceshi_biaoqian_remeng"
                        android:textColor="@color/text_white"
                        android:textSize="11sp" />
                </FrameLayout>
             </LinearLayout>
             
             
             
          <LinearLayout 
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:gravity="right"
              > 
             <ImageView
                android:id="@+id/quceDiaoCoinImage"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:gravity="right"
                android:scaleType="fitCenter"
                android:src="@drawable/quce_diao_coin_icon" />

            <TextView
                android:id="@+id/quceDiaoCoinText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_orange"
                android:text="12"
                android:layout_marginRight="10dp"
                android:textSize="13sp"/>

           </LinearLayout>  
            
            
            
         </LinearLayout>
</LinearLayout>
