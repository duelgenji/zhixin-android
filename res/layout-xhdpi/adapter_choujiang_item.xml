<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="160dp"
    android:layout_height="165dp"
    android:background="@color/text_white"
    android:weightSum="100"
    android:orientation="vertical" >

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="5" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="65">

        <ImageView
            android:id="@+id/rewardImage"
            android:layout_width="145dp"
            android:layout_height="95dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitXY"
            android:background="@null"
            android:src="@drawable/quchoujiang_default_background" />


        <FrameLayout
            android:layout_width="31dp"
            android:layout_height="31dp"
            android:layout_gravity="right|top" >

            <ImageView
                android:id="@+id/costImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/flag_green" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <TextView
                    android:id="@+id/costValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="50"
                    android:textColor="@color/text_white"
                    android:textSize="10sp" />
                <TextView
                    android:id="@+id/costType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/costValue"
                    android:text="@string/duijiang_credit"
                    android:textColor="@color/text_white"
                    android:textSize="10sp" />
                </RelativeLayout>

            </FrameLayout>

    </FrameLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="8" />

    <Button
        android:id="@+id/btnDuijiang"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_weight="18"
        android:background="@drawable/button_short_blue"
        android:layout_gravity="center"
        android:text="@string/duijiang_choujiang_btn"
        android:textColor="@color/text_white"
        android:textSize="14sp" />


</LinearLayout>