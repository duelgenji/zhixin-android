<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@color/general_activity_background"
    android:orientation="vertical">
	<ImageView 
	    android:id="@+id/img_quceshi_list"
	    android:layout_width="fill_parent"
	    android:layout_height="40dp"
	    
	    android:background="@drawable/quceshi_list_background"
	    />

	<TextView
	    android:id="@+id/questionareTitle"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="10dp"
	    android:textColor="@color/text_black"
	    android:text="测试：你的情绪控制指数有多高？"
	    android:textSize="17sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal"
        android:paddingBottom="2dp"
        android:paddingTop="2dp" >

			<LinearLayout
			    android:layout_width="40dp"
			    android:layout_height="match_parent"
			    android:orientation="horizontal" >

                <FrameLayout
                    android:id="@+id/tagFragment1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:visibility="gone" >

                    <ImageView
                        android:id="@+id/tagImage"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/qu_remeng_icon" />

                    <TextView
                        android:id="@+id/tagText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/quceshi_biaoqian_remeng"
                        android:textColor="@color/text_white"
                        android:textSize="11sp" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/tagFragment2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:visibility="gone" >

                    <ImageView
                        android:id="@+id/tagImage"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/qu_remeng_icon" />

                    <TextView
                        android:id="@+id/tagText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/quceshi_biaoqian_remeng"
                        android:textColor="@color/text_white"
                        android:textSize="11sp" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/tagFragment3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:visibility="gone" >

                    <ImageView
                        android:id="@+id/tagImage"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/qu_remeng_icon" />

                    <TextView
                        android:id="@+id/tagText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/quceshi_biaoqian_remeng"
                        android:textColor="@color/text_white"
                        android:textSize="11sp" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/tagFragment4"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:visibility="gone" >

                    <ImageView
                        android:id="@+id/tagImage"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/qu_remeng_icon" />

                    <TextView
                        android:id="@+id/tagText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/quceshi_biaoqian_remeng"
                        android:textColor="@color/text_white"
                        android:textSize="11sp" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/tagFragment5"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:visibility="gone" >

                    <ImageView
                        android:id="@+id/tagImage"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/qu_remeng_icon" />

                    <TextView
                        android:id="@+id/tagText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/quceshi_biaoqian_remeng"
                        android:textColor="@color/text_white"
                        android:textSize="11sp" />
                </FrameLayout>
             </LinearLayout>
             <TextView 
                 android:id="@+id/answerNumberTextView"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="12345"
                 android:layout_marginLeft="10dp"
                 android:textColor="@color/text_black"
                 android:textSize="13sp"
                 />
             <TextView 
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="人测试"
                 android:textColor="@color/text_black"
                 android:textSize="13sp"
                 />
             
             <TextView 
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="好友："
                 android:layout_marginLeft="30dp"
                 android:textColor="@color/text_black"
                 android:textSize="13sp"
                 />
             <TextView 
                 android:id="@+id/answerFriendNumber"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="12"
                 android:textColor="@color/text_black"
                 android:textSize="13sp"
                 />
             <TextView 
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="人"
                 android:textColor="@color/text_black"
                 android:textSize="13sp"
                 />
             
             
             
             <ImageView
                android:id="@+id/quceDiaoCoinImage"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/quce_diao_coin_icon" />

            <TextView
                android:id="@+id/quceDiaoCoinText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/quceDiaoCoinImage"
                android:textColor="@color/text_orange"
                android:textSize="13sp" />

            <ImageView
                android:id="@+id/quceDiaoCreditImage"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/quceDiaoCoinText"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/quce_diao_credit_icon" />

            <TextView
                android:id="@+id/quceDiaoCreditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/quceDiaoCreditImage"
                android:textColor="@color/text_black"
                android:textSize="13sp" />
            
            
            
         </LinearLayout>
</LinearLayout>