<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/general_activity_background"
    android:orientation="vertical"
    android:weightSum="96.1"
    tools:context=".ModifySignatureActivity" >

    <include layout="@layout/header_submit" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="2.2" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="8.6"
        android:paddingLeft="7.56dp"
        android:paddingRight="7.56dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/input_background_single_white_default"
            android:orientation="horizontal" >

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="3.9" />

            <EditText
                android:id="@+id/signatureTextView"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="81.3"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="@string/modify_signature"
                android:singleLine="true"
                android:textSize="18sp" />

            <ImageButton
                android:id="@+id/clearTextviewBtn"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:background="@null"
                android:scaleType="fitCenter"
                android:src="@drawable/modify_nickname_button" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="3.4" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>