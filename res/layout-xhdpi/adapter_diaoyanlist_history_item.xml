<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="67.84dp"
    android:background="@drawable/rank_item_background"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_weight="384"
        android:orientation="vertical"
        android:paddingLeft="14dp" >

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="23" />

        <TextView
            android:id="@+id/wjtitle"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="29"
            android:text="星座行为大测试"
            android:textColor="@color/text_black"
            android:textSize="15sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="57" >

            <TextView
                android:id="@+id/wjtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="2013-12-15"
                android:textColor="@color/text_blue"
                android:textSize="11sp" />

            <ImageView
                android:id="@+id/coinIcon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/wjtime"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/quce_diao_coin_icon" />

            <TextView
                android:id="@+id/coinValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="2dp"
                android:layout_toRightOf="@id/coinIcon"
                android:text="50"
                android:textColor="@color/text_black"
                android:textSize="11sp" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_weight="173"
        android:paddingBottom="13dp"
        android:paddingTop="13dp" >

        <ImageView
            android:id="@+id/statusImage"    
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/diaoyan_status_fail" />
    </RelativeLayout>

</LinearLayout>